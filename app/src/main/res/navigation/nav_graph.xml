<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/routinesFragment">

    <fragment
        android:id="@+id/routinesFragment"
        android:name="com.example.routineapplication.fragments.routine.RoutinesFragment"
        android:label=""
        tools:layout="@layout/fragment_routines">
        <action
            android:id="@+id/action_routinesFragment_to_addRoutineFragment"
            app:destination="@id/addRoutineFragment" />
        <action
            android:id="@+id/action_routinesFragment_to_editRoutineFragment"
            app:destination="@id/editRoutineFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.routineapplication.fragments.stat.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/addRoutineFragment"
        android:name="com.example.routineapplication.fragments.routine.AddRoutineFragment"
        android:label="Add new routine"
        tools:layout="@layout/fragment_add_routine">
        <action
            android:id="@+id/action_addRoutineFragment_to_routinesFragment"
            app:destination="@id/routinesFragment" />
    </fragment>
    <fragment
        android:id="@+id/editRoutineFragment"
        android:name="com.example.routineapplication.fragments.routine.EditRoutineFragment"
        android:label="Edit routine"
        tools:layout="@layout/fragment_edit_routine">
        <action
            android:id="@+id/action_editRoutineFragment_to_routinesFragment"
            app:destination="@id/routinesFragment" />
        <argument
            android:name="routine"
            app:argType="com.example.routineapplication.model.Routine" />
    </fragment>
</navigation>